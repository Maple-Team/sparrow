{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": false,
    "outDir": "output",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/types.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}